<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.sourcey.KauLempung.User.Checkout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/gmbr_produk"
            android:layout_gravity="center"
            android:layout_width="180dp"
            android:layout_height="180dp" />

        <TextView
            android:layout_marginTop="20dp"
            android:text="Data Pemesanan"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/primary"/>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/namaproduk"
            android:text="Nama Produk"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="Jumlah Pemesanan"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView

                android:id="@+id/jmlhpesanan_tv"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:textSize="18sp"

                android:text="username" />
        </LinearLayout>

        <LinearLayout
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="Tanggal Pesan"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView

                android:id="@+id/tv_tglpesan"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:layout_below="@id/img_post"

                android:textSize="18sp"
                android:text="Persib Bandung" />

        </LinearLayout>

        <TextView
            android:layout_marginTop="20dp"
            android:text="Pembayaran"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/primary"/>

        <LinearLayout
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="Jumlah Produk"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView

                android:id="@+id/tv_jmlhproduk"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:textSize="18sp"

                android:text="username" />
        </LinearLayout>

        <LinearLayout
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="Harga Produk"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView

                android:id="@+id/tv_hargaproduk"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:layout_below="@id/img_post"

                android:textSize="18sp"
                android:text="Persib Bandung" />

        </LinearLayout>

        <LinearLayout
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="Total Harga Produk"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView

                android:id="@+id/tv_tothargaproduk"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:layout_below="@id/img_post"

                android:textSize="18sp"
                android:text="Persib Bandung" />

        </LinearLayout>

        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Pengiriman"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <Spinner
            android:id="@+id/pilpengiriman"
            android:layout_width="200dp"
            android:layout_height="20dp"></Spinner>

            <Button
                android:onClick="cek"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Cek"
                android:padding="8dp"
                android:textColor="@color/primary"
                android:background="@drawable/button_layout2" />
        </LinearLayout>

    <LinearLayout
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Ongkos Kirim"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:text=":"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView

            android:id="@+id/tv_ongkoskirim"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_below="@id/img_post"

            android:textSize="18sp"
            android:text="0" />

    </LinearLayout>
    <LinearLayout
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Total Pembelian"
            android:textColor="@color/primary"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:text=":"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView

            android:id="@+id/hrgatot"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_below="@id/img_post"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="0" />

    </LinearLayout>
        <Button
            android:onClick="bayar"
            android:layout_gravity="center"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="BAYAR"
            android:padding="8dp"
            android:textColor="@color/primary"
            android:background="@drawable/button_layout2" />
    </LinearLayout>
</ScrollView>
